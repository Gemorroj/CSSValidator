{
    "name": "gemorroj/cssvalidator",
    "type": "library",
    "description": "W3C CSS Validator service.",
    "license": "LGPL-3.0-or-later",
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "symfony/http-client": "^5.4||^6.0"
    },
    "authors": [
        {
            "name": "Gemorroj"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CSSValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CSSValidator\\Tests\\": "tests/"
        }
    }
}
